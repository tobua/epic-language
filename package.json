{
  "name": "epic-language",
  "description": "Translations for React and React Native.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-language",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "scripts": {
    "app": "bun create-app.js",
    "demo:files": "bun bin.ts --input demo/api/static/translations/en.json --output demo/api/static/translations --language en",
    "server": "bun --watch server.ts",
    "server:files": "bun bin.ts --input translations.json --output test/translation --language en",
    "test": "bun test",
    "test:browser": "bun test browser.test",
    "test:node": "bun test node.test",
    "check": "biome check --write . && biome check --write --config-path=test ./test/*",
    "types": "tsc && tsc --project ./test/tsconfig.json"
  },
  "dependencies": {
    "logua": "^3.0.3",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/static": "^1.2.0",
    "@happy-dom/global-registrator": "^16.8.1",
    "@npmcli/arborist": "^9.0.0",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "^1.2.2",
    "@types/minimist": "^1.2.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "avait": "^2.1.1",
    "elysia": "^1.2.11",
    "npm-packlist": "^10.0.0",
    "openai": "^4.82.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.7.3",
    "zero-configuration": "^0.18.0"
  },
  "peerDependencies": {
    "openai": ">= 4",
    "react": ">= 18",
    "react-native": ">= 0.72"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./native": "./native.ts",
    "./function": "./translate.ts"
  },
  "bin": "./bin.ts",
  "files": [
    "*.ts"
  ],
  "keywords": [
    "react",
    "translations",
    "i18n",
    "translate"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": [
      "extends:recommended",
      "test/translation",
      "LanguageApp",
      "app/**/*",
      "!app/App.tsx",
      "!app/metro.config.js",
      "tsconfig.json",
      "!demo/api/tsconfig.json"
    ],
    "vscode": "biome",
    "license": "commercial",
    "biome": [
      {
        "extends": "recommended",
        "linter": {
          "rules": {
            "style": {
              "useNamingConvention": "off",
              "useBlockStatements": "off"
            },
            "correctness": {
              "noNodejsModules": "off"
            },
            "suspicious": {
              "noConsole": "off",
              "noConsoleLog": "off"
            }
          }
        },
        "files": {
          "ignore": [
            "demo",
            "app"
          ]
        }
      },
      {
        "folder": "test",
        "extends": "test"
      }
    ],
    "typescript": [
      {
        "extends": "plugin",
        "compilerOptions": {
          "jsx": "react-jsx",
          "paths": {
            "react-native": [
              "./test/react-native.mock"
            ],
            "epic-language": [
              "./index"
            ]
          }
        },
        "files": [
          "index.ts",
          "native.ts",
          "bin.ts",
          "translate.ts"
        ]
      },
      {
        "extends": "plugin",
        "folder": "test",
        "compilerOptions": {
          "strict": false,
          "jsx": "react-jsx",
          "paths": {
            "epic-jsx": [
              "./../index.ts"
            ]
          }
        }
      }
    ]
  }
}
