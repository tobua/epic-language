{
  "name": "epic-language",
  "description": "Translations for React and React Native.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-language",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "bin": "bun dist/bin.js --input files/en.json --output files --language en",
    "build": "padua build",
    "start": "padua watch",
    "test": "bun test",
    "test:browser": "bun test browser.test",
    "test:node": "bun test node.test"
  },
  "padua": {
    "entry": [
      "index.ts",
      "native.ts",
      "bin.ts"
    ],
    "esbuild": {
      "external": [
        "epic-language"
      ],
      "platform": "node",
      "format": "esm",
      "target": "node18"
    },
    "tsconfig": {
      "compilerOptions": {
        "types": [
          "bun-types"
        ],
        "paths": {
          "react-native": [
            "./test/react-native.mock"
          ],
          "epic-language": [
            "./index"
          ]
        }
      }
    }
  },
  "dependencies": {
    "logua": "^3.0.3",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^12.10.3",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "bun-types": "^1.0.16",
    "happy-dom": "^12.10.3",
    "openai": "^4.20.1",
    "padua": "^2.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "openai": ">= 4",
    "react": ">= 18",
    "react-native": ">= 0.72"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./native": {
      "default": {
        "types": "./dist/native.d.ts",
        "default": "./dist/native.js"
      }
    }
  },
  "bin": "./dist/bin.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "translations",
    "i18n",
    "translate"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "bun": ">= 1",
    "node": ">= 18"
  }
}
